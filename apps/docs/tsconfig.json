{
  "extends": "@repo/typescript-config/react-app.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".source/**/*.ts"
  ],
  "exclude": ["node_modules", ".next"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "keystoneui/*": ["../../packages/ui/src/*"],
      "@keystone/theme/*": ["../../packages/theme/src/*"],
      "fumadocs-mdx:collections/*": [".source/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  }
}
