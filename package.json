{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "clean": "turbo run clean && rm -rf node_modules",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=storybook^... && changeset publish",
    "preview-storybook": "turbo run preview-storybook",
    "test": "turbo run test",
    "check": "ultracite check",
    "fix": "ultracite fix",
    "add:component": "node scripts/add-component.mjs",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.4",
    "@changesets/cli": "^2.29.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.8.10",
    "ultracite": "7.2.3"
  },
  "packageManager": "pnpm@9.15.0",
  "name": "design-system",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "ultracite fix"
    ]
  }
